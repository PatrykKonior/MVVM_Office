<local:JedenViewBase x:Class="MVVMFirma.Views.NowyCzasPracyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVMFirma.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="White" Margin="50"> 
        
        <!-- 🔹 Border obejmujący cały formularz -->
        <Border BorderThickness="2" BorderBrush="Gray" Padding="30" CornerRadius="12">
            <StackPanel HorizontalAlignment="Center"> <!-- Wyśrodkowanie -->

                <!-- 🔹 Nagłówek -->
                <TextBlock Text="Dodaj Nowy Czas Pracy"
                           FontSize="30" FontWeight="Bold" Foreground="#3C473F"
                           HorizontalAlignment="Center" Margin="0,0,0,40"/> 

                <!-- 🔹 Formularz -->
                <StackPanel Width="750" Margin="20,0,20,0"> 

                    <!-- Pracownik -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                        <TextBlock Text="Pracownik:" Width="250" VerticalAlignment="Center"
                                   FontSize="20" FontWeight="SemiBold" Foreground="#3C473F"/>
                        <ComboBox Width="400" ItemsSource="{Binding EmployeesItems}"
                                  SelectedItem="{Binding SelectedEmployee, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                                  DisplayMemberPath="Value"/>
                    </StackPanel>

                    <!-- Projekt -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                        <TextBlock Text="Projekt:" Width="250" VerticalAlignment="Center"
                                   FontSize="20" FontWeight="SemiBold" Foreground="#3C473F"/>
                        <ComboBox Width="400" ItemsSource="{Binding ProjectsItems}"
                                  SelectedItem="{Binding SelectedProject, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"
                                  DisplayMemberPath="Value"/>
                    </StackPanel>

                    <!-- Data -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                        <TextBlock Text="Data:" Width="250" VerticalAlignment="Center"
                                   FontSize="20" FontWeight="SemiBold" Foreground="#3C473F"/>
                        <DatePicker Width="400" SelectedDate="{Binding LogDate, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"/>
                    </StackPanel>

                    <!-- Godziny Pracy -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                        <TextBlock Text="Godziny Pracy:" Width="250" VerticalAlignment="Center"
                                   FontSize="20" FontWeight="SemiBold" Foreground="#3C473F"/>
                        <TextBox Width="400" Text="{Binding HoursWorked, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"/>
                    </StackPanel>

                    <!-- Stawka Godzinowa -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                        <TextBlock Text="Stawka Godzinowa:" Width="250" VerticalAlignment="Center"
                                   FontSize="20" FontWeight="SemiBold" Foreground="#3C473F"/>
                        <TextBox Width="400" Text="{Binding HourlyRate, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, NotifyOnValidationError=True}"/>
                    </StackPanel>

                    <!-- Łączna Kwota -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                        <TextBlock Text="Łączna Kwota:" Width="250" VerticalAlignment="Center"
                                   FontSize="20" FontWeight="SemiBold" Foreground="#3C473F"/>
                        <TextBox Width="400" Text="{Binding TotalAmount}" IsReadOnly="True"/>
                    </StackPanel>

                </StackPanel>
            </StackPanel>
        </Border>

    </Grid>
</local:JedenViewBase>
