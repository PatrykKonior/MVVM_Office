<UserControl x:Class="MVVMFirma.Views.StartPageView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#EEEEEE">

    <UserControl.Resources>

        <!--Tło karty -->
        <SolidColorBrush x:Key="FluentCardBackground" Color="#F8F8F8"/>

        <!--Cień dla Fluent Design -->
        <DropShadowEffect x:Key="FluentShadowEffect" Color="#424242" Opacity="0.3" BlurRadius="8"/>

        <!--Styl dla kart -->
        <Style x:Key="FluentCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource FluentCardBackground}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Effect" Value="{StaticResource FluentShadowEffect}"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Width" Value="900"/>
        </Style>

        <!-- 🟦 Styl dla przycisków -->
        <Style x:Key="FluentButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#4C594F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Width" Value="250"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" BlurRadius="5" Opacity="0.3"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background">
                        <Setter.Value>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                <GradientStop Color="#FA8072" Offset="0.0"/>
                                <GradientStop Color="#E81123" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Setter.Value>
                    </Setter>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#A80000"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Width="Auto">

                <!--Nagłówek -->
                <TextBlock Text="Wybierz co nowego chcesz dodać:"
                           FontSize="22" FontWeight="Bold" Foreground="#757575"
                           HorizontalAlignment="Center" Margin="0,20"/>

                <!--Sekcja 1-->
                <Border Style="{StaticResource FluentCardStyle}">
                    <WrapPanel HorizontalAlignment="Center">
                        <ItemsControl ItemsSource="{Binding NewItemsCommands}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding DisplayName}" Command="{Binding Command}" Style="{StaticResource FluentButtonStyle}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </WrapPanel>
                </Border>

                <!--Nagłówek 2-->
                <TextBlock Text="Zobacz tabele ze wszystkimi elementami:"
                           FontSize="22" FontWeight="Bold" Foreground="#757575"
                           HorizontalAlignment="Center" Margin="0,20"/>

                <!--Sekcja 2-->
                <Border Style="{StaticResource FluentCardStyle}">
                    <WrapPanel HorizontalAlignment="Center">
                        <ItemsControl ItemsSource="{Binding AllItemsCommands}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding DisplayName}" Command="{Binding Command}" Style="{StaticResource FluentButtonStyle}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </WrapPanel>
                </Border>

                <!--Nagłówek 3-->
                <TextBlock Text="Widoki biznesowe:"
                           FontSize="22" FontWeight="Bold" Foreground="#757575"
                           HorizontalAlignment="Center" Margin="0,20"/>

                <!--Sekcja 3-->
                <Border Style="{StaticResource FluentCardStyle}">
                    <WrapPanel HorizontalAlignment="Center">
                        <ItemsControl ItemsSource="{Binding BusinessViewsCommands}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding DisplayName}" Command="{Binding Command}" Style="{StaticResource FluentButtonStyle}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </WrapPanel>
                </Border>

            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
