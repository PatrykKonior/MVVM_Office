<local:JedenViewBase x:Class="MVVMFirma.Views.NowaSprzedazView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVMFirma.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="White" Margin="50"> 
        
        <!-- 🔹 Border obejmujący cały formularz -->
        <Border BorderThickness="2" BorderBrush="Gray" Padding="30" CornerRadius="12">
            <StackPanel HorizontalAlignment="Center"> <!-- Wyśrodkowanie -->
                
                <!-- 🔹 Nagłówek -->
                <TextBlock Text="Dodaj Nową Sprzedaż"
                           FontSize="30" FontWeight="Bold" Foreground="#3C473F"
                           HorizontalAlignment="Center" Margin="0,0,0,40"/> 

                <!-- 🔹 Formularz -->
                <StackPanel Width="750" Margin="20,0,20,0"> 
                    
                    <!-- Klient -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                        <TextBlock Text="Klient:" Width="200" VerticalAlignment="Center"
                                   FontSize="20" FontWeight="SemiBold" Foreground="#3C473F"/>
                        <TextBox Width="200" IsReadOnly="True" 
                                 Text="{Binding SelectedClientFullName, Mode=OneWay}" 
                                 Margin="45,0,15,0"/>
                        <Button Content="Wybierz Klienta"
                                Command="{Binding ShowAllClientsCommand}" 
                                Width="180" Background="#4C594F" 
                                Foreground="White" Cursor="Hand"/>
                    </StackPanel>

                    <!-- Data Sprzedaży -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                        <TextBlock Text="Data Sprzedaży:" Width="250" VerticalAlignment="Center"
                                   FontSize="20" FontWeight="SemiBold" Foreground="#3C473F"/>
                        <DatePicker Width="400" SelectedDate="{Binding SaleDate, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" 
                                    ToolTip="{Binding (Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource Self}}"/>
                    </StackPanel>

                    <!-- Kwota Netto -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                        <TextBlock Text="Kwota Netto:" Width="250" VerticalAlignment="Center"
                                   FontSize="20" FontWeight="SemiBold" Foreground="#3C473F"/>
                        <TextBox Width="400" Text="{Binding TotalNetAmount, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" 
                                 ToolTip="{Binding (Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource Self}}"/>
                    </StackPanel>

                    <!-- Kwota VAT -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                        <TextBlock Text="Kwota VAT:" Width="250" VerticalAlignment="Center"
                                   FontSize="20" FontWeight="SemiBold" Foreground="#3C473F"/>
                        <TextBlock Text="{Binding TotalVATAmount, StringFormat='{}{0:C}'}" Width="400"/>
                    </StackPanel>

                    <!-- Kwota Brutto -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                        <TextBlock Text="Kwota Brutto:" Width="250" VerticalAlignment="Center"
                                   FontSize="20" FontWeight="SemiBold" Foreground="#3C473F"/>
                        <TextBlock Text="{Binding TotalGrossAmount, StringFormat='{}{0:C}'}" Width="400"/>
                    </StackPanel>

                    <!-- Status Sprzedaży -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                        <TextBlock Text="Status Sprzedaży:" Width="250" VerticalAlignment="Center"
                                   FontSize="20" FontWeight="SemiBold" Foreground="#3C473F"/>
                        <ComboBox Width="400" ItemsSource="{Binding SaleStatusList}"
                                  SelectedItem="{Binding SaleStatus, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}" 
                                  ToolTip="{Binding (Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource Self}}"/>
                    </StackPanel>

                </StackPanel>
            </StackPanel>
        </Border>

    </Grid>
</local:JedenViewBase>
