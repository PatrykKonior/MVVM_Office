<Window x:Class="MVVMFirma.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MVVMFirma" Height="300" Width="300" WindowState="Maximized"
        xmlns:vm="clr-namespace:MVVMFirma.Views"
        xmlns:System="clr-namespace:System;assembly=mscorlib">
    <Window.Resources>
        <ResourceDictionary Source="MainWindowResources.xaml" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>
        <Menu Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"
      Background="#1F1F1F" 
      Foreground="#EAEAEA"
      FontSize="12"
      FontWeight="SemiBold">

    <Menu.Resources>
        <!-- Styl dla MenuItem -->
        <Style TargetType="MenuItem">
            <Setter Property="Padding" Value="10,5"/>  
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Foreground" Value="#EAEAEA"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="Transparent"/>
            
            <!-- Efekt hover i kliknięcia -->
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#333333"/>  
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#555555"/>  
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Separator w stylu Fluent -->
        <Style TargetType="Separator">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Separator">
                        <Border Background="#EAEAEA"
                                Height="1"
                                Margin="8,2"
                                Opacity="0.7"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Styl dla submenu (ContextMenu) -->
        <Style TargetType="ContextMenu">
            <Setter Property="Background" Value="#1F1F1F"/>
            <Setter Property="BorderBrush" Value="#333333"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="Foreground" Value="#EAEAEA"/>
        </Style>
    </Menu.Resources>

    <!-- Struktura menu -->
    <MenuItem Header="_Plik">
        <MenuItem Header="Nowy" />
        <MenuItem Header="Zapisz" />
        <MenuItem Header="Zamknij" />
    </MenuItem>

    <MenuItem Header="_Ewidencja Biura">
        <MenuItem Header="Towary">
            <MenuItem.ContextMenu>
                <ContextMenu Style="{StaticResource {x:Type ContextMenu}}">
                    <MenuItem Header="Wszystkie Towary" />
                    <MenuItem Header="Dodaj Nowy Towar" />
                    <MenuItem Header="Materiały" />
                </ContextMenu>
            </MenuItem.ContextMenu>
        </MenuItem>

        <MenuItem Header="Projekty">
            <MenuItem.ContextMenu>
                <ContextMenu Style="{StaticResource {x:Type ContextMenu}}">
                    <MenuItem Header="Wszystkie Projekty" />
                    <MenuItem Header="Dodaj Nowy Projekt" />
                    <MenuItem Header="Zadania" />
                </ContextMenu>
            </MenuItem.ContextMenu>
        </MenuItem>

        <MenuItem Header="Sprzedaż">
            <MenuItem.ContextMenu>
                <ContextMenu Style="{StaticResource {x:Type ContextMenu}}">
                    <MenuItem Header="Lista Sprzedaży" />
                    <MenuItem Header="Dodaj Nową Sprzedaż" />
                    <MenuItem Header="Faktury" />
                </ContextMenu>
            </MenuItem.ContextMenu>
        </MenuItem>

        <MenuItem Header="Pracownicy">
            <MenuItem.ContextMenu>
                <ContextMenu Style="{StaticResource {x:Type ContextMenu}}">
                    <MenuItem Header="Lista Pracowników" />
                    <MenuItem Header="Dodaj Pracownika" />
                    <MenuItem Header="Działy" />
                </ContextMenu>
            </MenuItem.ContextMenu>
        </MenuItem>

        <MenuItem Header="Klienci">
            <MenuItem.ContextMenu>
                <ContextMenu Style="{StaticResource {x:Type ContextMenu}}">
                    <MenuItem Header="Lista Klientów" />
                    <MenuItem Header="Dodaj Klienta" />
                </ContextMenu>
            </MenuItem.ContextMenu>
        </MenuItem>
    </MenuItem>

    <MenuItem Header="_Program">
        <MenuItem Header="O Programie" />
        <MenuItem Header="Wyjdź" />
    </MenuItem>
</Menu>

        <!-- Left Menu with Expander -->
        <Border Grid.Row="1" Grid.Column="0"
        Background="{DynamicResource FluentBackground}"
        CornerRadius="12"
        Padding="5"
        Effect="{StaticResource FluentShadowEffect}">
            <HeaderedContentControl
                Header="MENU"
                Style="{StaticResource MainHCCStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <ScrollViewer.Resources>
                        <!-- Cieńszy pasek przewijania -->
                        <Style TargetType="ScrollBar">
                            <Setter Property="Width" Value="8" />
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Foreground" Value="LightSlateGray" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ScrollBar">
                                        <Grid Background="Transparent">
                                            <Track Name="PART_Track" IsDirectionReversed="True">
                                                <Track.Thumb>
                                                    <Thumb Background="#616161" Width="8"/>
                                                </Track.Thumb>
                                            </Track>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ScrollViewer.Resources>
                    <ItemsControl ItemsSource="{Binding Path=Commands}" Margin="5">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="Transparent"
                                        CornerRadius="6"
                                        Padding="6"
                                        Margin="2"
                                        Style="{StaticResource FluentHoverEffect}">
                                    <TextBlock VerticalAlignment="Center"
                                               TextAlignment="Left"
                                               FontSize="13"
                                               FontWeight="Regular"
                                               Width="180"
                                               TextWrapping="Wrap"
                                               Foreground="#333333">
                                        <Hyperlink Command="{Binding Path=Command}"
                                                   Foreground="#333333"
                                                   TextDecorations="{x:Null}">
                                            <TextBlock Text="{Binding Path=DisplayName}" 
                                                       TextWrapping="Wrap" 
                                                       TextTrimming="CharacterEllipsis"
                                                       Foreground="#333333"/>
                                        </Hyperlink>
                                    </TextBlock>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </HeaderedContentControl>
        </Border>

        <Border Grid.Row="1" Grid.Column="1"
                Background="#F0F0F0"
                CornerRadius="12"
                Padding="10"
                Effect="{StaticResource FluentShadowEffect}"
                BorderBrush="#DDDDDD"
                BorderThickness="1"
                Margin="10,0,10,0"> <!-- Odsunięcie od menu bocznego -->
            <HeaderedContentControl
                Header="WORKSPACE"
                Content="{Binding Path=Workspaces}"
                ContentTemplate="{StaticResource WorkspacesTemplate}"
                Style="{StaticResource MainHCCStyle}"/>
        </Border>


        <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                Background="#F5F5F5"  
                CornerRadius="5"
                Padding="1"
                Effect="{StaticResource FluentShadowEffect}"
                BorderBrush="#D0D0D0"
                BorderThickness="1"
                Margin="5,5,10,2"> <!-- Odstęp od górnych elementów -->

            <StatusBar Background="Transparent">
                <!-- Aktualna godzina (odświeżana na żywo) -->
                <StatusBarItem>
                    <TextBlock Name="ClockTextBlock"
                               Foreground="#444444"
                               FontSize="12"
                               FontWeight="Bold"
                               Margin="55,0"/>
                </StatusBarItem>

                <!-- Separator Fluent -->
                <Border Background="#D0D0D0"
                        Width="1"
                        Height="18"
                        Margin="35,0"
                        Opacity="0.6"/>

                <!-- Nazwa zalogowanego użytkownika -->
                <StatusBarItem>
                    <TextBlock Text="Zalogowany użytkownik: Patryk Konior"
                               Foreground="#444444"
                               FontSize="12"
                               FontWeight="Bold"
                               Margin="20,0"/>
                </StatusBarItem>

                <!-- Separator Fluent -->
                <Border Background="#D0D0D0"
                        Width="1"
                        Height="18"
                        Margin="20,0"
                        Opacity="0.6"/>

                <!-- Informacja o biurze -->
                <StatusBarItem>
                    <TextBlock Text="Aplikacja wewnętrzna dla firmy: Biuro Projektowe - Patryk Konior"
                               Foreground="#666666"
                               FontSize="12"
                               Margin="40,0"/>
                </StatusBarItem>
                
                <!-- Separator Fluent -->
                <Border Background="#D0D0D0"
                        Width="1"
                        Height="18"
                        Margin="40,0"
                        Opacity="0.6"/>

                <!-- Informacja o biurze -->
                <StatusBarItem>
                    <TextBlock Text="© 2025 Patryk Konior. All rights reserved."
                               Foreground="#666666"
                               FontSize="12"
                               Margin="80,0"/>
                </StatusBarItem>
            </StatusBar>
        </Border>

    </Grid>
</Window>