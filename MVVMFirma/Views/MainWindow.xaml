<Window x:Class="MVVMFirma.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MVVMFirma" Height="300" Width="300" WindowState="Maximized"
        xmlns:vm="clr-namespace:MVVMFirma.Views"
        xmlns:System="clr-namespace:System;assembly=mscorlib">
    <Window.Resources>
        <ResourceDictionary Source="MainWindowResources.xaml" />
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="25" />
            <RowDefinition Height="*" />
            <RowDefinition Height="35" />
        </Grid.RowDefinitions>
        
        <Menu Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2"
          Background="#E0E0E0" 
          Foreground="#424242"
          FontSize="12"
          FontWeight="SemiBold"
          Margin="5,0,5,2"> 
            <Menu.Resources>
                <Style TargetType="MenuItem">
                    <Setter Property="Padding" Value="10,3"/>  
                    <Setter Property="Margin" Value="5,0"/>
                    <Setter Property="Foreground" Value="#424242"/>
                    <Setter Property="FontSize" Value="11"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                    <Setter Property="Background" Value="Transparent"/>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#333333"/>  
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="#555555"/>  
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Menu.Resources>
                    <MenuItem Header="_Ewidencja Biura">
                                <MenuItem Header="Towary">
                                    <MenuItem Header="Wszystkie Towary" 
                                              Command="{Binding DataContext.StartPageViewModel.AllItemsCommands[4].Command, 
                                                        RelativeSource={RelativeSource AncestorType=Window}}" />
                                    
                                    <MenuItem Header="Dodaj Nowy Towar" 
                                              Command="{Binding DataContext.StartPageViewModel.NewItemsCommands[4].Command, 
                                                        RelativeSource={RelativeSource AncestorType=Window}}" />

                                    <MenuItem Header="Materiały" 
                                              Command="{Binding DataContext.StartPageViewModel.AllItemsCommands[5].Command, 
                                                        RelativeSource={RelativeSource AncestorType=Window}}" />
                                </MenuItem>

                                <MenuItem Header="Projekty">
                                    <MenuItem Header="Wszystkie Projekty" 
                                              Command="{Binding DataContext.StartPageViewModel.AllItemsCommands[0].Command, 
                                                        RelativeSource={RelativeSource AncestorType=Window}}" />
                                    <MenuItem Header="Dodaj Nowy Projekt" 
                                              Command="{Binding DataContext.StartPageViewModel.NewItemsCommands[0].Command, 
                                                        RelativeSource={RelativeSource AncestorType=Window}}" />
                                    <MenuItem Header="Zadania" 
                                              Command="{Binding DataContext.StartPageViewModel.AllItemsCommands[3].Command, 
                                                        RelativeSource={RelativeSource AncestorType=Window}}" />
                                </MenuItem>

                                <MenuItem Header="Sprzedaż">
                                    <MenuItem Header="Lista Sprzedaży" 
                                              Command="{Binding DataContext.StartPageViewModel.AllItemsCommands[7].Command, 
                                                        RelativeSource={RelativeSource AncestorType=Window}}" />
                                    <MenuItem Header="Dodaj Nową Sprzedaż" 
                                              Command="{Binding DataContext.StartPageViewModel.NewItemsCommands[7].Command, 
                                                        RelativeSource={RelativeSource AncestorType=Window}}" />
                                    <MenuItem Header="Faktury" 
                                              Command="{Binding DataContext.StartPageViewModel.AllItemsCommands[6].Command, 
                                                        RelativeSource={RelativeSource AncestorType=Window}}" />
                                </MenuItem>

                                <MenuItem Header="Pracownicy">
                                    <MenuItem Header="Lista Pracowników" 
                                              Command="{Binding DataContext.StartPageViewModel.AllItemsCommands[12].Command, 
                                                        RelativeSource={RelativeSource AncestorType=Window}}" />
                                    <MenuItem Header="Dodaj Pracownika" 
                                              Command="{Binding DataContext.StartPageViewModel.NewItemsCommands[12].Command, 
                                                        RelativeSource={RelativeSource AncestorType=Window}}" />
                                    <MenuItem Header="Działy" 
                                              Command="{Binding DataContext.StartPageViewModel.AllItemsCommands[13].Command, 
                                                        RelativeSource={RelativeSource AncestorType=Window}}" />
                                </MenuItem>

                                <MenuItem Header="Klienci">
                                    <MenuItem Header="Lista Klientów" 
                                              Command="{Binding DataContext.StartPageViewModel.AllItemsCommands[11].Command, 
                                                        RelativeSource={RelativeSource AncestorType=Window}}" />
                                    <MenuItem Header="Dodaj Klienta" 
                                              Command="{Binding DataContext.StartPageViewModel.NewItemsCommands[11].Command, 
                                                        RelativeSource={RelativeSource AncestorType=Window}}" />
                                </MenuItem>
                    </MenuItem>

            <MenuItem Header="_Program">
                <MenuItem Header="O Programie" Command="{Binding ShowAboutCommand}" />
                <MenuItem Header="Wyjdź z aplikacji" Command="{Binding LogoutCommand}" />
            </MenuItem>
        </Menu>
        
        <!-- Left Menu with Expander -->
        <Border Grid.Row="1" Grid.Column="0"
        Background="{DynamicResource FluentBackground}"
        CornerRadius="6"
        Padding="5"
        Effect="{StaticResource FluentShadowEffect}">
            <HeaderedContentControl
                Header="MENU"
                Style="{StaticResource MainHCCStyle}">
                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                    <ScrollViewer.Resources>
                        <!-- Cieńszy pasek przewijania -->
                        <Style TargetType="ScrollBar">
                            <Setter Property="Width" Value="8" />
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Foreground" Value="LightSlateGray" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ScrollBar">
                                        <Grid Background="Transparent">
                                            <Track Name="PART_Track" IsDirectionReversed="True">
                                                <Track.Thumb>
                                                    <Thumb Background="#616161" Width="8"/>
                                                </Track.Thumb>
                                            </Track>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ScrollViewer.Resources>
                    <ItemsControl ItemsSource="{Binding Path=Commands}" Margin="5">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="Transparent"
                                        CornerRadius="6"
                                        Padding="6"
                                        Margin="2"
                                        Style="{StaticResource FluentHoverEffect}">
                                    <TextBlock VerticalAlignment="Center"
                                               TextAlignment="Left"
                                               FontSize="13"
                                               FontWeight="Regular"
                                               Width="180"
                                               TextWrapping="Wrap"
                                               Foreground="#333333">
                                        <Hyperlink Command="{Binding Path=Command}"
                                                   Foreground="#333333"
                                                   TextDecorations="{x:Null}">
                                            <TextBlock Text="{Binding Path=DisplayName}" 
                                                       TextWrapping="Wrap" 
                                                       TextTrimming="CharacterEllipsis"
                                                       Foreground="#333333"/>
                                        </Hyperlink>
                                    </TextBlock>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </HeaderedContentControl>
        </Border>

        <Border Grid.Row="1" Grid.Column="1"
                Background="#F0F0F0"
                CornerRadius="6"
                Padding="10"
                Effect="{StaticResource FluentShadowEffect}"
                BorderBrush="#DDDDDD"
                BorderThickness="1"
                Margin="10,0,10,0">
            <HeaderedContentControl
                Header="WORKSPACE"
                Content="{Binding Path=Workspaces}"
                ContentTemplate="{StaticResource WorkspacesTemplate}"
                Style="{StaticResource MainHCCStyle}"/>
        </Border>


        <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                Background="#F5F5F5"  
                CornerRadius="5"
                Padding="1"
                Effect="{StaticResource FluentShadowEffect}"
                BorderBrush="#D0D0D0"
                BorderThickness="1"
                Margin="5,5,10,2"> <!-- Odstęp od górnych elementów -->

            <StatusBar Background="Transparent">
                <!-- Aktualna godzina (odświeżana na żywo) -->
                <StatusBarItem>
                    <TextBlock Name="ClockTextBlock"
                               Foreground="#3F4027"
                               FontSize="12"
                               FontWeight="Bold"
                               Margin="55,0"/>
                </StatusBarItem>

                <!-- Separator Fluent -->
                <Border Background="#A6A37C"
                        Width="1"
                        Height="18"
                        Margin="35,0"
                        Opacity="0.6"/>

                <!-- Nazwa zalogowanego użytkownika -->
                <StatusBarItem>
                    <TextBlock Text="Zalogowany użytkownik: Patryk Konior"
                               Foreground="#3F4027"
                               FontSize="12"
                               FontWeight="Bold"
                               Margin="20,0"/>
                </StatusBarItem>

                <!-- Separator Fluent -->
                <Border Background="#A6A37C"
                        Width="1"
                        Height="18"
                        Margin="20,0"
                        Opacity="0.6"/>

                <!-- Informacja o biurze -->
                <StatusBarItem>
                    <TextBlock Text="Aplikacja wewnętrzna dla firmy: Biuro Projektowe - Patryk Konior"
                               Foreground="#3F4027"
                               FontSize="12"
                               Margin="40,0"/>
                </StatusBarItem>
                
                <!-- Separator Fluent -->
                <Border Background="#A6A37C"
                        Width="1"
                        Height="18"
                        Margin="40,0"
                        Opacity="0.6"/>

                <!-- Informacja o biurze -->
                <StatusBarItem>
                    <TextBlock Text="© 2025 Patryk Konior. All rights reserved."
                               Foreground="#3F4027"
                               FontSize="12"
                               Margin="80,0"/>
                </StatusBarItem>
            </StatusBar>
        </Border>

    </Grid>
</Window>