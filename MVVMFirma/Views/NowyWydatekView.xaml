<local:JedenViewBase x:Class="MVVMFirma.Views.NowyWydatekView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MVVMFirma.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="White" Margin="50"> 
        
        <!-- 🔹 Border obejmujący cały formularz -->
        <Border BorderThickness="2" BorderBrush="Gray" Padding="30" CornerRadius="12">
            <StackPanel HorizontalAlignment="Center"> <!-- Wyśrodkowanie -->

                <!-- 🔹 Nagłówek -->
                <TextBlock Text="Dodaj Nowy Wydatek"
                           FontSize="30" FontWeight="Bold" Foreground="#3C473F"
                           HorizontalAlignment="Center" Margin="0,0,0,40"/> 

                <!-- 🔹 Formularz -->
                <StackPanel Width="700" Margin="20,0,20,0"> 

                    <!-- Projekt -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                        <TextBlock Text="Projekt:" Width="250" VerticalAlignment="Center"
                                   FontSize="20" FontWeight="SemiBold" Foreground="#3C473F"/>
                        <TextBox Width="250" IsReadOnly="True" 
                                 Text="{Binding SelectedProjectFullName, Mode=OneWay}" 
                                 Margin="0,0,15,0"/>
                        <Button Content="Wybierz Projekt"
                                Command="{Binding ShowAllProjectsCommand}" 
                                Width="140" Background="#4C594F" 
                                Foreground="White" Cursor="Hand"/>
                    </StackPanel>

                    <!-- Data Wydatku -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                        <TextBlock Text="Data Wydatku:" Width="250" VerticalAlignment="Center"
                                   FontSize="20" FontWeight="SemiBold" Foreground="#3C473F"/>
                        <DatePicker Width="400" SelectedDate="{Binding ExpenseDate, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <!-- Opis Wydatku (większa wysokość) -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                        <TextBlock Text="Opis Wydatku:" Width="250" VerticalAlignment="Top"
                                   FontSize="20" FontWeight="SemiBold" Foreground="#3C473F"/>
                        <TextBox Width="400" Height="60" TextWrapping="Wrap"
                                 Text="{Binding ExpenseDescription, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <!-- Kwota Netto -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                        <TextBlock Text="Kwota Netto:" Width="250" VerticalAlignment="Center"
                                   FontSize="20" FontWeight="SemiBold" Foreground="#3C473F"/>
                        <TextBox Width="400"
                                 Text="{Binding NetAmount, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <!-- Kwota VAT -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                        <TextBlock Text="Kwota VAT:" Width="250" VerticalAlignment="Center"
                                   FontSize="20" FontWeight="SemiBold" Foreground="#3C473F"/>
                        <TextBox Width="400"
                                 Text="{Binding VATAmount, ValidatesOnDataErrors=True, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <!-- Kwota Brutto (ReadOnly) -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                        <TextBlock Text="Kwota Brutto:" Width="250" VerticalAlignment="Center"
                                   FontSize="20" FontWeight="SemiBold" Foreground="#3C473F"/>
                        <TextBox Width="400" IsReadOnly="True"
                                 Text="{Binding GrossAmount, ValidatesOnDataErrors=True}"/>
                    </StackPanel>

                </StackPanel>
            </StackPanel>
        </Border>

    </Grid>
</local:JedenViewBase>
