<local:JedenViewBase x:Class="MVVMFirma.Views.NoweZadanieView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVMFirma.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="White" Margin="50"> 
        
        <!-- 🔹 Border obejmujący cały formularz -->
        <Border BorderThickness="2" BorderBrush="Gray" Padding="25" CornerRadius="12">
            <StackPanel HorizontalAlignment="Center"> <!-- Wyśrodkowanie -->

                <!-- 🔹 Nagłówek -->
                <TextBlock Text="Dodaj Nowe Zadanie"
                           FontSize="30" FontWeight="Bold" Foreground="#3C473F"
                           HorizontalAlignment="Center" Margin="0,0,0,25"/> 

                <!-- 🔹 Formularz -->
                <StackPanel Width="750" Margin="20,0,20,0"> 

                    <!-- Nazwa Zadania -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                        <TextBlock Text="Nazwa Zadania:" Width="250" VerticalAlignment="Center"
                                   FontSize="20" FontWeight="SemiBold" Foreground="#3C473F"/>
                        <TextBox Width="400" Text="{Binding TaskName, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                 ToolTip="{Binding (Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource Self}}"/>
                    </StackPanel>

                    <!-- Opis Zadania -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                        <TextBlock Text="Opis Zadania:" Width="250" VerticalAlignment="Center"
                                   FontSize="20" FontWeight="SemiBold" Foreground="#3C473F"/>
                        <TextBox Width="400" Text="{Binding TaskDescription, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                 ToolTip="{Binding (Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource Self}}"/>
                    </StackPanel>

                    <!-- Projekt -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                        <TextBlock Text="Projekt:" Width="200" VerticalAlignment="Center"
                                   FontSize="20" FontWeight="SemiBold" Foreground="#3C473F"/>
                        <TextBox Width="200" IsReadOnly="True"
                                 Text="{Binding SelectedProjectFullName, Mode=OneWay}" 
                                 Margin="45,0,15,0"/>
                        <Button Content="Wybierz Projekt"
                                Command="{Binding ShowAllProjectsCommand}" 
                                Width="180" Background="#4C594F" 
                                Foreground="White" Cursor="Hand"/>
                    </StackPanel>

                    <!-- Pracownik -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                        <TextBlock Text="Pracownik:" Width="200" VerticalAlignment="Center"
                                   FontSize="20" FontWeight="SemiBold" Foreground="#3C473F"/>
                        <TextBox Width="200" IsReadOnly="True"
                                 Text="{Binding SelectedEmployeeFullName, Mode=OneWay}" 
                                 Margin="45,0,15,0"/>
                        <Button Content="Wybierz Pracownika"
                                Command="{Binding ShowAllEmployeesCommand}" 
                                Width="180" Background="#4C594F" 
                                Foreground="White" Cursor="Hand"/>
                    </StackPanel>

                    <!-- Data Rozpoczęcia -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                        <TextBlock Text="Data Rozpoczęcia:" Width="250" VerticalAlignment="Center"
                                   FontSize="20" FontWeight="SemiBold" Foreground="#3C473F"/>
                        <DatePicker Width="400" SelectedDate="{Binding TaskStartDate, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                    ToolTip="{Binding (Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource Self}}"/>
                    </StackPanel>

                    <!-- Data Zakończenia -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                        <TextBlock Text="Data Zakończenia:" Width="250" VerticalAlignment="Center"
                                   FontSize="20" FontWeight="SemiBold" Foreground="#3C473F"/>
                        <DatePicker Width="400" SelectedDate="{Binding TaskEndDate, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                    ToolTip="{Binding (Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource Self}}"/>
                    </StackPanel>

                    <!-- Szacowane Godziny -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                        <TextBlock Text="Szacowane Godziny:" Width="250" VerticalAlignment="Center"
                                   FontSize="20" FontWeight="SemiBold" Foreground="#3C473F"/>
                        <TextBox Width="400" Text="{Binding EstimatedHours, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                 ToolTip="{Binding (Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource Self}}"/>
                    </StackPanel>

                    <!-- Status Zadania -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                        <TextBlock Text="Status Zadania:" Width="250" VerticalAlignment="Center"
                                   FontSize="20" FontWeight="SemiBold" Foreground="#3C473F"/>
                        <ComboBox Width="400" ItemsSource="{Binding TaskStatusList}"
                                  SelectedItem="{Binding TaskStatus, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"
                                  ToolTip="{Binding (Validation.Errors)[0].ErrorContent, RelativeSource={RelativeSource Self}}"/>
                    </StackPanel>

                </StackPanel>
            </StackPanel>
        </Border>

    </Grid>
</local:JedenViewBase>
