<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:MVVMFirma.Views">
    
    <!-- Cień dla Fluent Design -->
    <DropShadowEffect x:Key="FluentShadowEffect" Color="#424242" Opacity="0.3" BlurRadius="8"/>

    <!-- Styl dla ComboBox -->
    <Style x:Key="FluentComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Padding" Value="5"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="#D0D0D0"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    
        <!-- 🔹 Nadpisujemy domyślny styl -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Border BorderThickness="1" BorderBrush="{TemplateBinding BorderBrush}" 
                            Background="{TemplateBinding Background}" CornerRadius="8" Padding="5">
                    
                        <Grid>
                            <!-- Pole tekstowe ComboBox -->
                            <TextBlock Name="ContentPresenter" 
                                       Text="{TemplateBinding SelectionBoxItem}"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       TextWrapping="NoWrap" 
                                       Margin="0,5,0,5"/>

                            <!-- Strzałka otwierająca menu -->
                            <ToggleButton Name="DropDownToggle"
                                          IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                          Background="Transparent" BorderThickness="0"
                                          HorizontalAlignment="Right" Padding="5">
                                <TextBlock Text="▼" FontSize="12" Foreground="#3C473F"/>
                            </ToggleButton>
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="FluentTextBoxStyle" TargetType="TextBox">
        <Setter Property="Padding" Value="5"/>
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="BorderBrush" Value="#D0D0D0"/>
        <Setter Property="TextAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    
        <!-- Nadpisuje domyślny wygląd -->
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="1"
                            CornerRadius="8" Padding="5">
                        <ScrollViewer x:Name="PART_ContentHost"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <!-- 🔵 Styl dla przycisków Fluent -->
    <Style x:Key="FluentButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="#6F7A72"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Width" Value="140"/>
        <Setter Property="Height" Value="40"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Effect">
            <Setter.Value>
                <DropShadowEffect Color="Black" BlurRadius="3" Opacity="0.2"/>
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid Background="{TemplateBinding Background}"> 
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock Text="{TemplateBinding Tag}" FontSize="14" Margin="0,0,15,0"/>
                            <TextBlock Text="{TemplateBinding Content}" FontSize="12" FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#4c594f"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#3C473F"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    
    <Style TargetType="{x:Type local:WszystkieViewBase}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:WszystkieViewBase}">
                    <Grid Margin="0,10,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/> 
                            <RowDefinition Height="Auto"/> 
                            <RowDefinition Height="*"/> 
                        </Grid.RowDefinitions>

                        <!-- Pasek narzędzi -->
                        <ToolBar Grid.Row="0" Background="#F3F3F3" Padding="5" BorderThickness="0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">

                                <Button Content="Dodaj" Tag="➕" ToolTip="Dodaj" Command="{Binding AddCommand}" 
                                        Style="{StaticResource FluentButtonStyle}" Width="140"/>

                                <Button Content="Odśwież" Tag="🔄" ToolTip="Odśwież" Command="{Binding LoadCommand}" 
                                        Style="{StaticResource FluentButtonStyle}" Width="140"/>

                                <Button Content="Anuluj" Tag="❌" ToolTip="Anuluj" Command="{Binding CloseCommand}" 
                                        Style="{StaticResource FluentButtonStyle}" Width="140"/>
                            </StackPanel>
                        </ToolBar>

                        <!-- Sekcja sortowania i wyszukiwania -->
                        <Border Grid.Row="1" Background="#F8F8F8" CornerRadius="8" Padding="10" Margin="5" Effect="{StaticResource FluentShadowEffect}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0.1*"/> 
                                    <ColumnDefinition Width="Auto"/> 
                                    <ColumnDefinition Width="0.1*"/> 
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!--Sortowanie -->
                                <StackPanel Orientation="Horizontal" Grid.Column="0" Margin="5">
                                    <TextBlock Text="Sortowanie:" FontSize="16" FontWeight="Bold" Foreground="#3C473F" VerticalAlignment="Center"/>
                                    <ComboBox ItemsSource="{Binding SortComboboxItems}" 
                                              SelectedValue="{Binding SortField,Mode=TwoWay}" 
                                              Width="160" Margin="10,0,0,0"/>
                                    <Button Content="Sortuj" Tag="🔃" Command="{Binding SortCommand}" 
                                            Style="{StaticResource FluentButtonStyle}" Width="100" Margin="10,0,0,0" />
                                </StackPanel>

                                <!-- Wyszukiwanie -->
                                <StackPanel Orientation="Horizontal" Grid.Column="2" Margin="5">
                                    <TextBlock Text="Wyszukiwanie:" FontSize="16" FontWeight="Bold" Foreground="#3C473F" VerticalAlignment="Center"/>
                                    <ComboBox ItemsSource="{Binding FindComboboxItems}" 
                                              SelectedValue="{Binding FindField,Mode=TwoWay}" 
                                              Width="160" Margin="10,0,0,0"/>
                                    <TextBox Text="{Binding FindTextBox, UpdateSourceTrigger=PropertyChanged}" 
                                             Width="160" Margin="10,0,0,0" TextAlignment="Center"/>
                                    <Button Content="Szukaj" Tag="🔍" Command="{Binding FindCommand}" 
                                            Style="{StaticResource FluentButtonStyle}" Width="100" Margin="10,0,0,0"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Główna zawartość -->
                        <ContentPresenter Grid.Row="2" Margin="0,5,0,5"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style TargetType="{x:Type local:JedenViewBase}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:JedenViewBase}">
                    <Grid Margin="0,10,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Pasek narzędzi -->
                        <ToolBar Grid.Row="0" Background="#F3F3F3" Padding="5" BorderThickness="0">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">

                                <Button Content="Zapisz i Zamknij" Tag="💾" ToolTip="Zapisz zmiany i zamknij" 
                                        Command="{Binding SaveCommand}" 
                                        Style="{StaticResource FluentButtonStyle}" Width="160"/>

                                <Button Content="Anuluj" Tag="❌" ToolTip="Anuluj zmiany i zamknij" 
                                        Command="{Binding CloseCommand}" 
                                        Style="{StaticResource FluentButtonStyle}" Width="140"/>
                            </StackPanel>
                        </ToolBar>
                        <!-- Główna zawartość -->
                        <ContentPresenter Grid.Row="1" Margin="0,5,0,5"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
